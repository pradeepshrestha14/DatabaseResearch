<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  tools:context="com.impact.mydatabaseproject.MainActivity">

   <EditText android:hint="Name" android:id="@+id/id_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <EditText android:hint="Surname"
        android:id="@+id/id_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText android:hint="Marks"
        android:id="@+id/id_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button android:text="Add Data"
        android:id="@+id/id_adddata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button android:text="View Data"
        android:id="@+id/id_viewdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
